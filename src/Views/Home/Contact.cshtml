<style>

    .e-view {
        position: absolute;
        bottom: 0;
    }

    .e-content .e-item {
        font-size: 12px;
        padding: 10px;
        text-align: justify;
    }

    #Tab .e-tab-icon {
        font-family: 'Socialicons' !important;
    }

    .e-toolbar-items {
        border-bottom: solid 1px #ccc;
    }

    .e-tab {
        border: solid 1px #d3d3d3;
        border-radius: 10px;
    }

    #Tab .e-icons.e-tab-icon {
        position: relative;
        top: 1px;
    }

    .outer {
        display: table;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }

    .middle {
        display: table-cell;
        vertical-align: middle;
    }

    .inner {
        margin-left: auto;
        margin-right: auto;
        width: 400px;
    }
    textarea {
        width: 380px;
        height: 300px;
    }
</style>
<div class="outer">
    <div class="middle">
        <div class="inner">
            <div class="control-section">
                <div class="content-wrapper">
                    <div class="content-section" height="500px" width="500px">
                        <div id="Tab"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="base64" style="display:none;">@Html.Raw(ViewData["Base64"])</div>


<script>
    var base64 = document.getElementById('base64').innerText;
    var imgCnt = document.createElement('div');
    imgCnt.innerHTML = '<textarea><img src="data:image/png;base64,' + base64 + '" /></textarea>';

    var css = document.createElement('div');
    css.innerHTML = '<textarea> .classname{ background-image: url(" data:image/png;base64,' + base64 + '");}<textarea>';

    var plain = document.createElement('div');
    plain.innerHTML = '<textarea> ' + base64 + ' </textarea>';

    var tabObj = new ej.navigations.Tab({
        items: [
            {
                header: { 'text': 'HTML' },
                content: imgCnt
            },
            {
                header: { 'text': 'CSS' },
                content: css
            },
            {
                header: { 'text': 'BASE 64' },
                content: plain
            }
        ]
    });
    //Render initialized Tab component
    tabObj.appendTo('#Tab');
</script>
