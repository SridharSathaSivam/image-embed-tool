@{
    ViewData["Title"] = "Home Page";
}

<div class="outer">
    <div class="middle">
        <div class="inner">
            <div class="col-lg-12 control-section" align="center">
                <div class="control_wrapper">
                    <!-- Initialize Uploader -->
                    <input type='file' id='fileupload' name='UploadFiles' />
                </div>
            </div>
        </div>
    </div>
</div>
<div id="dialog"></div>

<script>
    var dropElement = document.getElementsByClassName('control-fluid')[0];
    var dialogObj = new ej.popups.Dialog({
        showCloseIcon: true,
        width: '455px',
        target: document.getElementById('target'),
        animationSettings: { effect: 'Zoom' },
        open: dialogOpen,
        visible: false,
    });
    dialogObj.appendTo('#dialog');

    // Initialize the uploader component
    var uploadObj = new ej.inputs.Uploader({
        asyncSettings: {
            saveUrl: '/api/Service',
        },
        success: function (e) {
            if (e.file.name) {
                var ajax = new ej.base.Ajax('/Home/Contact?name=' + e.file.name , 'GET', true);
                ajax.send().then();
                // Rendering Dialog on AJAX success
                ajax.onSuccess = function (data) {
                    dialogObj.content = data;
                    dialogObj.dataBind();
                    dialogObj.show();
                   
                };
            }
            
        }
    });
    uploadObj.appendTo('#fileupload');

    function dialogOpen() {
        eval(this.element.querySelector("script").innerText);
        dialogObj.popupObj.reposition();
    }

   

    function onFileRemove(args) {
        args.postRawFile = false;
    }

</script>

<style>
    .e-view {
        position: absolute;
        bottom: 0;
    }

    .outer {
        display: table;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }

    .middle {
        display: table-cell;
        vertical-align: middle;
    }

    .inner {
        margin-left: auto;
        margin-right: auto;
        width: 400px;
    }
</style>
